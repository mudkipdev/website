---
interface Props {
    title: string;
    name?: string;
}

const { title, name } = Astro.props;
---
<details name={name}>
    <summary>{title}</summary>
    <slot />
</details>

<style>
    details {
        margin: 12px 0;
        display: flex;
        flex-direction: column;
        justify-content: center;

        padding: 1em;
        border: 2px solid var(--surface-3);
    }

    details summary {
        user-select: none;
        font-size: 22px;
        cursor: pointer;
    }

    details[open] summary {
        margin-bottom: 8px;
    }
</style>