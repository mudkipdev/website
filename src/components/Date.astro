---
interface Props {
    date: Date;
}

const { date } = Astro.props;
---
<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric"
        })
    }
</time>

<style>
    time {
        margin-top: 5px; /* for blog page */
        color: var(--surface-5);
    }
</style>